<script src="js/app.js"></script>

    <script>
        new Vue({
            el: '.lottary_page',
            data: {
                game_id:'33',
                last_winner: {
                    name: 'Игорь Мельник',
                    avatar: 'https://pp.userapi.com/c840225/v840225949/67344/dyi5rSSyc8Q.jpg',
                    url: 'https://vk.com/id124174337',
                    prize: '40'
                },
                plase:50,
                plase_free:18,
                myPlacesCount:0,
                plases:{},
                give_account_id:0,
                random_num:2
            },
            ready: function () {
                this.LoadGame();
            },
            computed: {
                procent:function () {
                    return ((this.plase - this.plase_free)/this.plase)*100;
                }
            },
            methods: {
                LoadGame: function () {
                        this.$http.post('/lottery').then(function (response) {
                            if(this.game_id != response.data.game_id){
                                location.reload();
                            }
                            this.last_winner = response.data.last_winner;
                            this.plase = response.data.plase;
                            this.plase_free = response.data.plase_free;
                            this.myPlacesCount = response.data.myPlacesCount;
                            this.plases = response.data.plases;
                            this.random_num = response.data.random_num;

                        });
                },
                giveAccount:function (id) {
                    this.give_account_id = id;
                    $('#buy_regular').arcticmodal();
                },
                buyPlace:function (num) {
                    this.$http.post('/lottery',{action:'buy', place:num, game_id:this.game_id}).then(function (response) {
                        if(this.game_id != response.data.game_id){
                            location.reload();
                        }
                        this.last_winner = response.data.last_winner;
                        this.plase = response.data.plase;
                        this.plase_free = response.data.plase_free;
                        this.myPlacesCount = response.data.myPlacesCount;
                        this.plases = response.data.plases;
                        this.random_num = response.data.random_num;
                        if(response.data.error.length){
                            toastr.error(response.data.error[0]);
                        }
                    });
                },
                buyRandomPlace:function () {
                    this.buyPlace(this.random_num);
                }
            }
        });


    </script>

